+
+    for (i = 0; i < s->num_out_buffers && err == OMX_ErrorNone; i++) {
+        err = OMX_FillThisBuffer(s->handle, s->out_buffer_headers[i]);
+    }
+
+    if (err != OMX_ErrorNone) {
