+static void say(OMXCodecContext *s, const char *message, ...)
+{
+    va_list args;
+    size_t str_len;
+    char str[1024];
+    memset(str, 0, sizeof(str));
+    va_start(args, message);
+    vsnprintf(str, sizeof(str) - 1, message, args);
+    va_end(args);
+    str_len = strlen(str);
+    if (str[str_len - 1] != '\n') {
